<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8" />
  <title>Telsoft Global Admin</title>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>


  <%= csrf_meta_tags %>

</head>
<body >
<div id="wrapper">
  <div id="wrapper2">
    <div id="wrapper3">
      <div id="top-menu">
        <div id="account">
            render account_menu
        </div>
      </div>

      <div id="header">
        <%= image_tag("logo.jpeg" ) %>
        <%= @page_title || t('.title') %>
      </div>

      <div id="main">
        <div id="sidebar">
          sidebar
          <%= yield :sidebar %>
        </div>

        <div id="content">
          render_flash_messages
          <%= yield %>
          <div style="clear:both;"></div>
        </div>
      </div>
    </div>

    <div id="ajax-indicator" style="display:none;"><span>label_loading</span></div>
    <div id="ajax-modal" style="display:none;"></div>

    <div id="footer">
      <div class="bgl"><div class="bgr">
        Powered by  &copy; 2014 Telsoft Global
      </div></div>
    </div>
  </div>
</div>

</body>
</html>
